{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi": "off",
        "quotes": "off",
        "linebreak-style": "off",
        "camelcase": "off",
        "no-else-return": "off",
        "class-methods-use-this": "off",
        "prefer-const": "off",
        "import/newline-after-import": "off",
        "nonblock-statement-body-position": "off",
        "new-cap": "off",
        "no-param-reassign": "off",
        "arrow-body-style": "off",
        "func-names": "off",
        "guard-for-in": "off",
        "no-restricted-syntax": "off",
        "consistent-return": "off",
        "array-callback-return": "off"
    }
}
